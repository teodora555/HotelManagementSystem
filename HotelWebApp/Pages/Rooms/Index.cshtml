@page
@model HotelWebApp.Pages.Rooms.IndexModel

@{
    ViewData["Title"] = "Room Management";
}

<h1>Room Management</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Room</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Rooms[0].RoomNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Rooms[0].Type)</th>
            <th>@Html.DisplayNameFor(model => model.Rooms[0].PricePerNight)</th>
            <th>@Html.DisplayNameFor(model => model.Rooms[0].Status)</th>
            <th>Number of Bookings</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rooms)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(ModelItem => item.PricePerNight)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@item.Bookings?.Count() ?? 0</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
